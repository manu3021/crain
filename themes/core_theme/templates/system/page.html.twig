{#
/**
 * @file
 * Himalaya's theme implementation to display a single page.
 *
 */
#}
<div id="page-wrapper">
    <div id="page">
        {% if page.header %}
            <header id="header" role="banner" aria-label="{{ 'Site header'|t}}">
                <nav id="navigation">
                    <div class="container">
                            <div id="main-menu">
                                {{ page.header }}
                            </div>
                    </div>
                </nav>
            </header>
        {% endif %}
        <div id="main-wrapper">
            <div id="main" class="clearfix">

                {% if page.sidebar_first %}
                    <div id="sidebar">
                        <aside class="section" role="complementary">
                            {{ page.sidebar_first }}
                        </aside>
                    </div>
                    <main id="content" role="main">
                        <section class="section">
                            <a id="main-content" tabindex="-1"></a>
                            {{ title_prefix }}
                            {% if title %}
                                <h1 class="title" id="page-title">
                                    {{ title }}
                                </h1>
                            {% endif %}
                            {{ title_suffix }}
                            {% if action_links %}
                                <ul class="action-links">{{ action_links }}</ul>
                            {% endif %}
                            {{ page.content }}
                        </section>
                    </main>
                {% else %}
                    <main id="content"  role="main">
                        <section class="section">
                            <a id="main-content" tabindex="-1"></a>
                            {{ title_prefix }}
                            {% if title %}
                                <h1 class="title" id="page-title">
                                    {{ title }}
                                </h1>
                            {% endif %}
                            {{ title_suffix }}
                            {% if action_links %}
                                <ul class="action-links">{{ action_links }}</ul>
                            {% endif %}
                            {{ page.content }}
                        </section>
                    </main>
                {% endif %}
            </div>
        </div>
        <div id="footer">
            {% if page.footer %}
                {{ page.footer }}
            {% endif %}
        </div>
    </div>
</div>

