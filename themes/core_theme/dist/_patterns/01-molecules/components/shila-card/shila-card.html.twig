{% set link_url %}{{ link_url }}{% endset %}
{%
  set classes = [
    'card',
    link_url ? 'card--link',
  ]
%}
<section{{ attributes.addClass(classes) }}>
  {% if link_url %}<a href="{{ link_url }}">{% endif %}
  {% spaceless %}
    <div class="card__image">
      {{ image }}
    </div>
  {% endspaceless %}
  <div class="card__body">
    {{ contextual_links }}
    {{ title_prefix }}
    {% if title %}
      <h2 class="card__title">{{ title }}</h2>
    {% endif %}
    {{ title_suffix }}
    {% if content %}
      <div class="card__content">
        {% block content %}
          {{ content }}
        {% endblock %}
      </div>
    {% endif %}
    {% if actions %}
      <div class="card__actions">
        {{ actions }}
      </div>
    {% endif %}
  </div>
  {% if link_url %}</a>{% endif %}
</section>
